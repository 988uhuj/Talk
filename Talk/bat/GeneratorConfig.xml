<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >  
<generatorConfiguration >  
<!-- 设置mysql驱动路径 -->  
<classPathEntry location="./lib/mysql-connector-java-5.1.7-bin.jar" />  
<!-- 此处指定生成针对MyBatis3的DAO -->  
  <context id="context1"  targetRuntime="MyBatis3">  
  <!-- jdbc连接信息 -->  
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"    
    connectionURL="jdbc:mysql://127.0.0.1:3306/talk"   
    userId="talkroot" 
    password="abc123"
    />  
    <!-- 生成vo对象 -->  
     <javaModelGenerator targetPackage="me.risky.domain" targetProject="src" />  


    <!-- 生成用于查询的Example对象  mapper.xml-->  
     <sqlMapGenerator targetPackage="me.risky.persistence" targetProject="src" />  


    <!-- 生成DAO的类文件以及配置文件  mapper.java-->  
     <javaClientGenerator targetPackage="me.risky.persistence" targetProject="src" type="XMLMAPPER" />   



    <!-- 想要生成的数据库表,自动化工具会根据该表的结构生成相应的vo对象 -->  
    <table schema="" tableName="version" >  </table>  
   <!--  <table schema="" tableName="equipment" >  </table>   -->
  </context>  
</generatorConfiguration> 